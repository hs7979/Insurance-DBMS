<%- include("./partials/header.ejs") %>

<h1>Enter Details for TRAVEL Insurance</h1>
<div class="container">
    <div class="col">
        <div class="formblock">
            <form action="/<%=t%>" method="POST">
                <div class="form-group row">
                    <label for="T1" class="col-sm-4 col-form-label">INSURANCE ID: </label>
                    <div class="col-6">
                        <input id="T1" class="form-control" type="text" name="_id" required value="<%=i%>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="T2" class="col-sm-4 col-form-label">MODE OF TRAVEL: </label>
                    <div class="col-6">
                        <input id="T2" class="form-control" type="text" name="mode" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="T3" class="col-sm-4 col-form-label">REGION(Travelling to): </label>
                    <div class="col-6">
                        <input id="T3" class="form-control" type="text" name="i_region" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="T4" class="col-sm-4 col-form-label">DURATION: </label>
                    <div class="col-6">
                        <input id="T4" class="form-control" type="text" name="duration" required>
                    </div>
                </div>
                <input class="btn btn-primary" type="submit">
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>