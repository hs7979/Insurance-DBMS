<%- include("./partials/header.ejs") %>

<h1>Edit Customer Details:</h1>
<div class="container">
    <div class="col">
        <div class="formblock">
            <form action="/customer/<%=cu._id%>/edit?_method=patch" method="POST">
                <div class="form-group row">
                    <label for="c1" class="col-sm-2 col-form-label">CUSTOMER SSN: </label>
                    <div class="col-6">
                        <input id="c1" class="form-control" type="text" value="<%=cu._id%>" name="_id" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="c2" class="col-sm-2 col-form-label">NAME: </label>
                    <div class="col-6">
                        <input id="c2" class="form-control" type="text" value="<%=cu.c_name%>" name="c_name" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="c3" class="col-sm-2 col-form-label">E-MAIL: </label>
                    <div class="col-6">
                        <input id="c3" class="form-control" type="email" value="<%=cu.email%>" name="email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="c4" class="col-sm-2 col-form-label">LOCAL ADDRESS: </label>
                    <div class="col-6">
                        <input id="c4" class="form-control" type="text" value="<%=cu.c_loc_add%>" name="c_loc_add" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="c5" class="col-sm-2 col-form-label">REGION: </label>
                    <div class="col-6">
                        <input id="c5" class="form-control" type="text" value="<%=cu.c_region%>" name="c_region" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="c6" class="col-sm-2 col-form-label">AGENT:</label>
                    <div class="col-6">
                        <input id="c6" class="form-control" type="text" value="<%=cu.empid.id%>" name="emp_id" required>
                    </div>
                </div>
                <input class="btn btn-primary" type="submit">
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>
